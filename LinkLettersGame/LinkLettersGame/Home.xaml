<Window x:Class="LinkLettersGame.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LinkLettersGame"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800" Background="LavenderBlush">
    <Grid>
        <Image x:Name="avatarPic" HorizontalAlignment="Left" Height="241" Margin="50,51,0,0" VerticalAlignment="Top" Width="249"/>
        <Label x:Name="userLable" Content="Username" HorizontalAlignment="Left" Margin="82,344,0,0" VerticalAlignment="Top"/>
        <Button x:Name="easyBtn" Content="Easy" HorizontalAlignment="Left" Margin="519,115,0,0" VerticalAlignment="Top" Width="75" Click="EasyBtn_Click"/>
        <Button x:Name="mediumBtn" Content="Medium" HorizontalAlignment="Left" Margin="519,171,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button x:Name="hardBtn" Content="Hard" HorizontalAlignment="Left" Margin="519,224,0,0" VerticalAlignment="Top" Width="75" Click="HardBtn_Click"/>
        <Button x:Name="leaderBoard" Content="Leader Board" HorizontalAlignment="Left" Margin="519,277,0,0" VerticalAlignment="Top" Width="75" Click="LeaderBtn_Click"/>

    </Grid>
</Window>
